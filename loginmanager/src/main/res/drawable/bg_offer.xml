<?xml version="1.0" encoding="utf-8"?>
<!-- Fullscreen background: sample image-like gradient with subtle texture/overlay -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient base -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#FF512F"
            android:centerColor="#DD2476"
            android:endColor="#8A2387"
            android:type="linear"/>
        </shape>
    </item>

    <!-- optional semi-transparent texture overlay (simulated) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000" />
        </shape>
    </item>

    <!-- center decorative vignette (soft) -->
    <item>
        <shape android:shape="rectangle">
            <size android:width="1dp" android:height="1dp"/>
            <gradient
                android:type="radial"
                android:gradientRadius="400"
                android:centerX="0.5"
                android:centerY="0.4"
                android:startColor="#00FFFFFF"
                android:endColor="#20000000"/>
        </shape>
    </item>

</layer-list>
