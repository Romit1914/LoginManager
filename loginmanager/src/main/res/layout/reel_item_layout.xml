<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reelContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:clipToPadding="false">

    <!-- Video Player -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:resize_mode="fit"
        android:keepScreenOn="true"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true" />

    <!-- Play/Pause Overlay -->
    <ImageView
        android:id="@+id/btnPlayPause"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:alpha="0"
        android:src="@android:drawable/ic_media_play"
        app:tint="#FFFFFF" />

    <!-- Like Overlay Animation -->
    <ImageView
        android:id="@+id/ivLikeOverlay"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:alpha="0"
        android:src="@drawable/ic_like_filled"
        app:tint="#FF2D55" />

    <!-- Volume Overlay Icon -->
    <ImageView
        android:id="@+id/ivVolumeOverlay"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:src="@drawable/ic_volume_on"
        app:tint="#FFFFFF" />

    <!-- RIGHT SIDE ACTION BUTTONS -->
    <LinearLayout
        android:id="@+id/rightActions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="12dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnLike"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_like_outline"
            app:tint="#FFFFFF" />

        <ImageView
            android:id="@+id/btnComment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_comment"
            app:tint="#FFFFFF" />

        <ImageView
            android:id="@+id/btnShare"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_share"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- Bottom Panel (Description + ProgressBar) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Reel description here..." />

        <SeekBar
            android:id="@+id/reelProgressBar"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:progressTint="#FFFFFF"
            android:thumb="@null"
            android:backgroundTint="#444" />
    </LinearLayout>

</FrameLayout>
