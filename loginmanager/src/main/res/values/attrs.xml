<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ButtonView">
        <attr name="btnText" format="string" />
        <attr name="btnTextSize" format="dimension" />
        <attr name="btnTextColor" format="color" />
        <attr name="btnBackgroundColor" format="color" />
        <attr name="btnBackgroundImage" format="reference" />
        <attr name="btnCornerRadius" format="dimension" />
        <attr name="btnTextStyle" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
        </attr>
        <attr name="btnFont" format="reference"/>
        <attr name="btnBorderColor" format="color" />
        <attr name="btnBorderWidth" format="dimension" />
        <attr name="btnIcon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="LoaderView">
        <attr name="loaderText" format="string" />
    </declare-styleable>

    <declare-styleable name="SliderView">
        <attr name="sliderLabel" format="string" />
        <attr name="sliderMin" format="float" />
        <attr name="sliderMax" format="float" />
        <attr name="sliderValue" format="float" />
        <attr name="sliderActiveColor" format="color" />
        <attr name="sliderInactiveColor" format="color" />
        <attr name="sliderThumbColor" format="color" />
    </declare-styleable>

    <declare-styleable name="SelectOptionView">
        <attr name="optionType" format="string" />
        <attr name="optionText" format="string" />
        <attr name="optionGroup" format="string" />
    </declare-styleable>

    <declare-styleable name="ChipComponent">
        <attr name="chipBackgroundColor" format="color" />
        <attr name="chipTextColor" format="color" />
        <attr name="chipGradientStartColor" format="color" />
        <attr name="chipGradientEndColor" format="color" />
        <attr name="useGradient" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ListComponent">
        <attr name="spanCount" format="integer" />
        <attr name="layoutType" format="string" />
        <attr name="orientation" format="enum">
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
        </attr>
        <attr name="aspectRatio" format="string" />
        <attr name="itemLayout" format="reference" />
    </declare-styleable>

</resources>